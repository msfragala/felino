{
  "name": "felino",
  "version": "0.0.0",
  "repository": "git@github.com:msfragala/felino.git",
  "author": "Mitchell Fragala <ms.fragala@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "yarn build --watch",
    "test": "ava",
    "prerelease": "rm -rf dist && yarn build",
    "release": "np",
    "lint:prettier": "prettier . --list-different",
    "git-pre-commit": ".githooks/pre-commit"
  },
  "main": "./dist/api.js",
  "bin": {
    "felino": "./dist/cli.js"
  },
  "types": "./dist/api.d.ts",
  "felino": {
    "rules": [
      {
        "files": [
          "./**/*.js",
          "./**/*.ts"
        ],
        "format": "kebab"
      }
    ]
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "semi": true
  },
  "ava": {
    "files": [
      "tests/*.spec.js"
    ],
    "require": [
      "esm"
    ]
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "change-case": "^4.1.2",
    "cosmiconfig": "^7.0.0",
    "dlv": "^1.1.3",
    "globby": "^11.0.3",
    "kleur": "^4.1.4",
    "matcher": "^4.0.0",
    "sade": "^1.7.4"
  },
  "devDependencies": {
    "@types/node": "^15.0.2",
    "@types/sade": "^1.7.2",
    "@vercel/git-hooks": "^1.0.0",
    "ava": "^3.15.0",
    "esbuild": "^0.11.20",
    "esm": "^3.2.25",
    "execa": "^5.0.0",
    "fs-extra": "^10.0.0",
    "np": "^7.5.0",
    "prettier": "^2.2.1",
    "tempy": "^1.0.1",
    "typescript": "^4.2.4"
  },
  "volta": {
    "node": "16.1.0",
    "yarn": "1.22.10"
  }
}
